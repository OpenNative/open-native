<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="react-native" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="p-20">
        <ScrollView class="h-full">
          <StackLayout>
            <Button text="Load Bridge" tap="{{ loadBridge }}" class="btn btn-primary"/>
            <Button text="RNTestModule.getName" tap="{{ getName }}" class="btn btn-primary"/>
            <Button text="RNTestModule.Callback" tap="{{ callbackTest }}" class="btn btn-primary"/>
          </StackLayout>
        </ScrollView>
    </StackLayout>
</Page>