{
  "extends": "../../tsconfig.base.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Native",
  "_version": "2.0.0",
  "compilerOptions": {
    "rootDirs": [
      ".",
      "../.."
    ],
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@demo/shared": [
        "../../tools/demo/index.ts"
      ],
      "@open-native/*": [
        "../../packages/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": [
    "src"
  ]
}