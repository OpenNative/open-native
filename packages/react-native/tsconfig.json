{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // The whole package could be in ES6 were it not for the hook.
    // TODO: once hooks support ESM, go back to using a single tsconfig.
    "outDir": "../../dist/out-tsc",
    "rootDir": ".",
    "allowJs": true
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "angular",
    "hooks",
    "test_hook.js"
  ],
  "include": ["**/*.ts", "references.d.ts", "**/*.js"]
}
