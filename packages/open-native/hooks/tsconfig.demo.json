{
  "compilerOptions": {
    "outDir": "../../../apps/demo/scripts",
    "rootDirs": [".", ".."],
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": false,
    "noEmitOnError": true,
    "removeComments": true,
    "skipLibCheck": true
  },
  "include": ["../typings/**/*.d.ts"],
  "files": ["index.ts"]
}
