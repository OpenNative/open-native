{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/core",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "outputPath": "dist/packages/core",
        "tsConfig": "packages/core/tsconfig.json",
        "packageJson": "packages/core/package.json",
        "main": "packages/core/index.d.ts",
        "assets": [
          "packages/core/*.md",
          "packages/core/index.d.ts",
          "packages/core/postinstall.js",
          "packages/core/preuninstall.js",
          "packages/core/react-android/**/*",
          "LICENSE",
          "LICENSE-react-native",
          "LICENSE-react-native-community-cli",
          {
            "glob": "**/*",
            "input": "packages/core/platforms/",
            "output": "./platforms/"
          }
        ]
      },
      "dependsOn": [
        {
          "target": "build.all",
          "projects": "dependencies"
        }
      ]
    },
    "build.hooks.demo": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "./node_modules/.bin/tsc -p packages/core/hooks/tsconfig.demo.json"
        ],
        "parallel": false
      },
      "outputs": ["apps/demo/scripts"],
      "dependsOn": [
        {
          "target": "build.hooks.demo",
          "projects": "dependencies"
        }
      ]
    },
    "build.hooks": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "./node_modules/.bin/tsc -p packages/core/hooks/tsconfig.json"
        ],
        "parallel": false
      },
      "outputs": ["dist/packages/core/hooks"],
      "dependsOn": [
        {
          "target": "build.hooks",
          "projects": "dependencies"
        },
        {
          "target": "build",
          "projects": "self"
        }
      ]
    },
    "build.all": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": ["node tools/scripts/build-finish.ts core"],
        "parallel": false
      },
      "outputs": ["dist/packages/core"],
      "dependsOn": [
        {
          "target": "build.all",
          "projects": "dependencies"
        },
        {
          "target": "build.hooks",
          "projects": "self"
        },
        {
          "target": "build",
          "projects": "self"
        }
      ]
    },
    "build.npm": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": ["node tools/scripts/prepare-for-npm.ts core"],
        "parallel": false
      },
      "outputs": ["dist/packages/core"],
      "dependsOn": [
        {
          "target": "build.npm",
          "projects": "dependencies"
        },
        {
          "target": "build.all",
          "projects": "self"
        },
        {
          "target": "build.hooks",
          "projects": "self"
        },
        {
          "target": "build",
          "projects": "self"
        }
      ]
    },
    "focus": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": ["nx g @nativescript/plugin-tools:focus-packages core"],
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["packages/core/**/*.ts"]
      }
    }
  },
  "tags": []
}
